<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillInformationActivity">

    <TextView
        android:id="@+id/rooms_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms*"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/rooms_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/rooms_textview"
        app:layout_constraintTop_toTopOf="@id/rooms_textview"/>


    <TextView
        android:id="@+id/budget_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget*"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/rooms_picker"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edit_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/budget_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/budget_textview"/>

    <TextView
        android:id="@+id/area_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size of decoration area*"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_budget"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/pick_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/area_textview"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/area_textview"/>

    <TextView
        android:id="@+id/square_meters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mÂ²"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/pick_area"
        app:layout_constraintTop_toTopOf="@id/pick_area"
        app:layout_constraintBottom_toBottomOf="@id/pick_area"/>

    <Button
        android:id="@+id/picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add pictures*"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/pick_area"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/picture1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picture_button"/>

    <ImageView
        android:id="@+id/picture2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@+id/picture1"
        app:layout_constraintTop_toBottomOf="@id/picture_button"/>

    <ImageView
        android:id="@+id/picture3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@+id/picture2"
        app:layout_constraintTop_toBottomOf="@id/picture_button"/>

    <ImageView
        android:id="@+id/picture4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@+id/picture3"
        app:layout_constraintTop_toBottomOf="@id/picture_button"/>

    <ImageView
        android:id="@+id/picture5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@+id/picture4"
        app:layout_constraintTop_toBottomOf="@id/picture_button"/>

    <TextView
        android:id="@+id/description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description*"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/picture1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        app:layout_constraintLeft_toRightOf="@id/description_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/description_textview"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/edit_description"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>