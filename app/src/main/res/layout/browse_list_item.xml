<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/customborder">

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/browse_name"
        android:textSize="24sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Name" />

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/browse_rooms"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/browse_name"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Rooms:" />

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/rooms_number"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/browse_rooms"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4" />

    <TextView
        android:id="@+id/browse_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/browse_rooms"
        app:layout_constraintTop_toBottomOf="@id/browse_rooms"
        android:text="Budget:" />

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/budget_number"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/browse_budget"
        app:layout_constraintTop_toBottomOf="@id/browse_rooms"
        tools:text="3000" />

</android.support.constraint.ConstraintLayout>